---
import logo from "../../public/art_assets/umbrellapicture.png";
---

<header class="header">
    <div class="container">
        <ul>
            <li>
                <div class="logo">
                    <a href="/">
                        <img src={logo} alt="Company Logo" />
                    </a>
                </div>
            </li>
            <li><h1>Welcome to Parasol.com</h1></li>
        </ul>
    </div>
    <div class="under-con">Under Construction - please view in mobile version: (iPhone12)</div>
</header>

<style>


    .header {
        padding-bottom: 50px;
        width:100%;
    }
    ul {
        display: inline-flex;
    }
    h1 {
        justify-self: end;
        font-size: 30px;
        padding-left: 10px;
    }
    img {
        justify-self:left;
        width: 50px;
        height: 50px;
    }
    .under-con{
        width:100%;
        height:50px;
        background-color: yellow;
        color:red;
        font-weight:bolder;
    }
</style>
